SRCS =		ft_itoa.c ft_split.c ft_strmapi.c ft_putchar_fd.c ft_putstr_fd.c ft_striteri.c\
			ft_putendl_fd.c ft_putnbr_fd.c ft_strtrim.c ft_strjoin.c ft_atoi.c ft_bzero.c\
			ft_calloc.c ft_isalnum.c ft_isalpha.c ft_isascii.c ft_isdigit.c ft_isprint.c\
			ft_memchr.c ft_memcmp.c ft_memcpy.c ft_memmove.c ft_memset.c ft_strchr.c\
			ft_strdup.c ft_strlcat.c ft_strlcpy.c ft_strlen.c ft_strncmp.c ft_strcmp.c ft_strnstr.c\
			ft_strrchr.c ft_tolower.c ft_toupper.c ft_substr.c
OBJS = $(SRCS:.c=.o)
CC  = cc
CFLAGS = -Wall -Wextra -Werror
NAME = libft.a

all: $(NAME)

$(NAME): $(OBJS)
	ar -r $@ $^

bonus: $(OBJS_B)
	ar -r $(NAME) $^

%.o: %.c libft.h
	$(CC) $(CFLAGS) -c $<

clean:
	rm -rf $(OBJS) $(OBJS_B)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all fclean clean re bonus